  multi <- subset(
    x = multi,
    subset = nCount_peaks < 40000 &
      nCount_RNA < 75000 &
      nCount_peaks > 1000 &
      nCount_RNA > 1000 &
      nucleosome_signal < 2.5 &
      TSS.enrichment > 1
  )
  p1 <- VlnPlot(
    object = multi,
